<UserControl
    x:Class="DriveCataloguizer.AddEditDrive"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DriveCataloguizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:DriveCataloguizerViewModel;assembly=DriveCataloguizerViewModel"
    d:DataContext="{d:DesignInstance viewmodel:DriveViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            Margin="5"
            Text="{Binding Name}" />
        <TextBox
            Grid.Row="1"
            Margin="5"
            Text="{Binding SecondName}" />
        <TextBox
            Grid.Row="2"
            Margin="5"
            Text="{Binding Description}" />
        <Button
            x:Name="Save"
            Grid.Row="4"
            Width="150"
            Margin="5"
            HorizontalAlignment="Right"
            Click="Save_Click"
            Content="Сохранить" />
    </Grid>
</UserControl>
