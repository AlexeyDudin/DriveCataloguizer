<metro:MetroWindow
    x:Class="DriveCataloguizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DriveCataloguizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:DriveCataloguizerViewModel;assembly=DriveCataloguizerViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewmodels:CataloguesViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="7" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            ItemsSource="{Binding Catalogs}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=Number, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Номер" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=PersentOfFull, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Заполнение" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</metro:MetroWindow>
