<metro:MetroWindow
    x:Class="DriveCataloguizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DriveCataloguizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:DriveCataloguizerViewModel;assembly=DriveCataloguizerViewModel" 
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    Title="Каталогизатор дисков"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewmodels:CataloguesViewModel}"
    mc:Ignorable="d">
    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Menu Background="Transparent">
                <MenuItem>
                    <MenuItem.Header>
                        <iconPacks:PackIconOcticons Kind="Archive16" />
                    </MenuItem.Header>
                    <MenuItem x:Name="TapeControlAdd" Click="TapeControlAdd_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCoolicons Kind="AddPlus" Margin="5 0" />
                                <TextBlock Text="Добавить коробку" Margin="5 0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>
                <MenuItem>
                    <MenuItem.Header>
                        <iconPacks:PackIconPhosphorIcons Kind="Disc" />
                    </MenuItem.Header>
                    <MenuItem x:Name="DiskControlAdd" Click="DiskControlAdd_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCoolicons Kind="AddPlus" Margin="5 0"  />
                                <TextBlock Text="Добавить диск" Margin="5 0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="7" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <DataGrid
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            ItemsSource="{Binding Catalogs}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=Number, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Номер" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=PersentOfFull, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    Header="Заполнение" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</metro:MetroWindow>
